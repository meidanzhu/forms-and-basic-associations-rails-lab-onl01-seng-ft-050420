<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre %>
  <%= collection_select :song, :genre_id, Genre.all, :id, :name %>
  <br>
  <%= f.label :notes %>
  <input id="song[notes][]" name='song_notes_1'/>
  <input id="song[notes][]" name='song_notes_2'/>
  <input id="song[notes][]" name='song_notes_3'/>

  <%= f.submit "Create Song"%>
<% end %>
